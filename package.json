{
	"name": "hangar",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build:packages": "bunup --exports --sourcemap",
		"dev:packages": "bunup --watch --exports --sourcemap",
		"dev:test": "cd src/apps/testing && bun --bun run src/index.tsx",
		"dev:mounted": "cd src/apps/mounted && bun --bun run src/index.ts",
		"dev:compilation": "cd src/apps/compilation && bun --bun --watch run src/index.tsx"
	},
	"devDependencies": {
		"@types/bun": "^1.3.4",
		"bunup": "^0.16.10",
		"typescript": "^5.9.3"
	},
	"workspaces": [
		"src/packages/**",
		"src/apps/**",
		"src/tests/**"
	],
	"type": "module"
}
